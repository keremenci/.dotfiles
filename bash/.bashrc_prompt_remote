RESET="\[\017\]"
NORMAL="\[\033[0m\]"
RED="\[\033[31;1m\]"
YELLOW="\[\033[33;1m\]"
WHITE="\[\033[37;1m\]"
IP='[$(ip route get 1.1.1.1 | awk -F"src " '"'"'NR == 1{ split($2, a," ");print a[1]}'"'"')]'
SUCCESS=""
FAIL=" ${RED}$?${NORMAL} "
SELECT="if [ \$? = 0 ]; then echo \"${SUCCESS}\"; else echo \"${FAIL}\"; fi"

# Throw it all together
PS1="${RESET}${YELLOW}\u@\h ${WHITE}$IP${NORMAL}:\w ${YELLOW}\$${NORMAL}\`${SELECT}\` "
